<html lang="en">
<body>
<table class="table">
    <tr class="text-center bg-green-500">
        <th>Name</th>
        <th>Surname</th>
        <th>Age</th>
        <th>Personal Code</th>
        <th>Address</th>
        <th>Notes</th>
    </tr>
    {% for person in persons %}
        <tr class="text-center bg-green-500">
            <td>{{ person['name'] }}</td>
            <td>{{ person['surname'] }}</td>
            <td>{{ person['age'] }}</td>
            <td>{{ person['personal_code'] }}</td>
            <td>{{ person['address'] }}</td>
            <td>{{ person['notes'] }}</td>
        </tr>
    {% endfor %}
</table>
<form method="post">
    <input class="bg-red-500 hover:bg-red-700 rounded" type="submit" name="delete" value="Delete?">
    <input class="bg-green-500 hover:bg-green-700 rounded" type="submit" name="update" value="Update">
</form>
</body>
</html>